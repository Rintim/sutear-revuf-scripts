{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		/* Preact Config */
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"skipLibCheck": true,
		"paths": {
			"react": [
				"./node_modules/preact/compat/"
			],
			"react/jsx-runtime": [
				"./node_modules/preact/jsx-runtime"
			],
			"react-dom": [
				"./node_modules/preact/compat/"
			],
			"react-dom/*": [
				"./node_modules/preact/compat/*"
			]
		}
	},
	"include": [
		"lib/*"
	],
	"exclude": [
		"node_modules"
	]
}